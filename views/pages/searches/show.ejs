<!DOCTYPE html>
<html>
<head>

  <title>Search</title>
  <%- include('../../layout/head') %>
  <link rel="stylesheet" href="/Styles/modules/save-book.css"/>
</head>
<body>
  <%- include('../../layout/header') %>
  <div></div>
  <main>
    <h2> Search Results</h2>
    <section class ="all-api-books" id ="test">
        <% renderedBooks.forEach( item => { %>
          <% let num = 0 %>
          <% num++ %>
          <section class ="api-book book-item">
            <img src="<%= item.image_url %>">
            <h3 class="title"><%= item.title %></h3>
            <p class="author"><%= item.author %></p>
            <p class="description"><%= item.description %></p>
            <button class="api-button"> Add Book</button>
            <section class="save-form hidden form-container <%= item.isbn %>">
                <%- include('../books/edit', {formAction: 'save', item: item}) %>
            </section>
          </section>
          
        <% }) %>
    </section>
  </main>
  <%- include('../../layout/footer') %>
</body>
</html>