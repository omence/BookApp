<!DOCTYPE html>
<html>
<head>

  <title>Search</title>
  <%- include('../../layout/head') %>
</head>
<body>
  <%- include('../../layout/header') %>
  <main>
    <section class="detail-container">
          <section class ="book-item" data-id="<%= book.id %>">
            <img src= "<%= book.image_url %>" />
            <p>Title: <%= book.title %></p>
            <p>Author: <%= book.author %></p>
            <p>Description: <%= book.description %> </p>
            <p> ISBN: <%= book.isbn %> </p>
            <button class="edit-button">Edit Book</button>
          </section>
    </section>
    <section class="db-form detail-hide">
      <%- include('edit', {formAction: 'update', item: book}) %>
    </section>
  </main>
  <%- include('../../layout/footer') %>
</body>
</html>